{
  "name": "ChOWDER client extension",
  "version": "0.1",
  "description": "chowder client extension.",
  "background": {
    "persistent": false,
    "scripts": ["js/command.js", "js/metabinary.js", "js/background.js", "js/ws_connector.js", "js/options.js"]
  },
  "browser_action": {
    "default_icon": "img/chowder.png",
    "default_title": "Take a screen shot!",
	"default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "storage"
  ],
  "manifest_version": 2
}
